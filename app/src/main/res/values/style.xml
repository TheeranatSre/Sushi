        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="android:textColorHint">@color/light_blue</item>
        <item name="hintTextColor">@color/light_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>
    <style name="text_field">
        <item name="android:fontFamily">@font/prompt_regular</item>
        <item name="android:textSize">16sp</item>
